<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_attendances_sheet_tree" model="ir.ui.view">
            <field name="name">attendances.sheet.tree</field>
            <field name="model">attendances.sheet</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="Attendances Sheet">
                    <field name="name" />
                    <field name="division_id" />
                    <field name="attendance_date" />
                </tree>
            </field>
        </record>

        <record id="view_attendances_sheet_form" model="ir.ui.view">
            <field name="name">attendances.sheet.form</field>
            <field name="model">attendances.sheet</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Attendances Sheet">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" default_focus="1" placeholder="Name" readonly="1" />
                            </h1>
                        </div>
                        <group col="4" colspan="4">
                            <field name="division_id" />                           
                            <field name="attendance_date" />
                        </group>
                        <group col="4" string="Students">
                            <field name="attendances_line" colspan="4" nolabel="1">
                                <tree string="Attendances Line" editable="top">
                                    <field name="student_id" />
                                    <field name="division_id" />
                                </tree>
                            </field>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_attendances_sheet_search" model="ir.ui.view">
            <field name="name">attendances.sheet.search</field>
            <field name="model">attendances.sheet</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Attendances Sheet">
                    <field name="division_id" />
                    <field name="attendance_date" />
                    <group expand="0" string="Group By...">
                        <filter string="Date" domain="[]" context="{'group_by':'attendance_date'}" />
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_attendances_sheet_view">
            <field name="name">Attendances Sheets</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">attendances.sheet</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_attendances_sheet_search" />
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <record model="ir.actions.act_window.view" id="act_attendances_sheet_view_form">
            <field name="act_window_id" ref="act_attendances_sheet_view" />
            <field name="sequence" eval="20" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_attendances_sheet_form" />
        </record>

        <record model="ir.actions.act_window.view" id="act_attendances_sheet_view_tree">
            <field name="act_window_id" ref="act_attendances_sheet_view" />
            <field name="sequence" eval="10" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_attendances_sheet_tree" />
        </record>

    </data>
</odoo>
